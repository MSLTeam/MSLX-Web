<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="clr-namespace:SukiUI.Controls;assembly=SukiUI"
             xmlns:mi="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:vm="using:MSLX.Core.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MSLX.Core.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid>
    <suki:SukiSideMenu Grid.Column="0" IsSelectedItemContentMovable="False" ItemsSource="{Binding MainPages}" SelectedItem="{Binding ActivePage}">
      <suki:SukiSideMenu.ItemTemplate>
        <DataTemplate>
          <suki:SukiSideMenuItem Classes="Compact" Header="{Binding Name}">
          </suki:SukiSideMenuItem>
        </DataTemplate>
      </suki:SukiSideMenu.ItemTemplate>
    </suki:SukiSideMenu>
    <suki:SukiDialogHost Manager="{Binding DialogManager}"/>
  </Grid>
</UserControl>
